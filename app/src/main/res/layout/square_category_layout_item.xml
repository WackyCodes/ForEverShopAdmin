<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="3dp"
    android:padding="6dp"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:background="@drawable/back_rectangle_4dp_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sq_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_photo_black_24dp"/>

    <TextView
        android:id="@+id/sq_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAlignment="center"
        android:textColor="@color/colorDarkViolet"
        android:text="@string/sample_heading"
        android:textStyle="bold"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/sq_update_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sq_update_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorSecondary"
            android:textSize="12sp"
            android:text="update\nImage" />
        <TextView
            android:id="@+id/sq_update_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="update\nName"/>
    </LinearLayout>


</LinearLayout>