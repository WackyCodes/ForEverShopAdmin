<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp"
    android:layout_margin="2dp"
    android:elevation="3dp"
    android:background="@color/colorWhite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:visibility="gone"
        android:id="@+id/image_view"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_photo_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/add_image_layout"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/add_new_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Image"
            android:padding="2dp"
            android:maxLines="2"
            android:textAlignment="center"
            android:paddingLeft="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/edit_imgBtn"
        android:visibility="visible"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:tint="@color/colorPrimary"
        android:padding="0dp"
        android:elevation="3dp"
        android:background="@drawable/back_1dp_border_4dp_radius"
        android:backgroundTint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/pro_image_no"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_round_primary_color_1_border"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="7"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back_1dp_border_4dp_radius"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
