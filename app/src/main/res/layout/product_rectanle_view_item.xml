<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:elevation="6dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/hr_viewAll_product_image"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_photo_black_24dp" />

    <TextView
        android:id="@+id/hr_viewAll_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="3"
        android:padding="2dp"
        android:text=" "
        android:textColor="@color/colorSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hr_viewAll_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hr_viewAll_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:padding="2dp"
        android:text=" "
        android:textColor="@color/colorSecondary"
        app:layout_constraintStart_toStartOf="@+id/hr_viewAll_product_name"
        app:layout_constraintTop_toBottomOf="@+id/hr_viewAll_product_name" />

    <TextView
        android:id="@+id/hr_viewAll_product_cut_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="@+id/hr_viewAll_product_price"
        app:layout_constraintStart_toEndOf="@+id/hr_viewAll_product_price" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorRecyclerBack"
        app:layout_constraintBottom_toBottomOf="@+id/hr_viewAll_product_cut_price"
        app:layout_constraintEnd_toEndOf="@+id/hr_viewAll_product_cut_price"
        app:layout_constraintStart_toStartOf="@+id/hr_viewAll_product_cut_price"
        app:layout_constraintTop_toTopOf="@+id/hr_viewAll_product_cut_price" />

    <TextView
        android:id="@+id/hr_viewAll_product_off_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="@+id/hr_viewAll_product_cut_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hr_viewAll_product_cut_price" />

    <TextView
        android:id="@+id/hr_viewAll_product_stock_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/back_1dp_border_4dp_radius"
        android:backgroundTint="@color/colorYellow"
        android:textColor="@color/colorPrimary"
        android:text=" "
        android:textSize="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/hr_viewAll_product_image"
        app:layout_constraintEnd_toEndOf="@+id/hr_viewAll_product_image" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hr_viewAll_product_image"
        app:layout_goneMarginBottom="12dp">

<!--        To Copy Product Id...-->

        <TextView
            android:id="@+id/product_id_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:padding="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorGreen"
            android:text="4562903213"/>

        <ImageView
            android:id="@+id/product_id_copy_img_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="6dp"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_content_copy_black_24dp"
            />

        <TextView
            android:id="@+id/product_add_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="ADD "
            android:textStyle="bold"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/back_no_back_color_1dp_border"
            android:textColor="@color/colorPrimary"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>